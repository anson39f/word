<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/bt_open_bluetooth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="打开蓝牙" />

        <Button
            android:id="@+id/bt_close_bluetooth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关闭蓝牙" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/bt_start_discovery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="扫描蓝牙" />

        <Button
            android:id="@+id/bt_stop_discovery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="停止扫描" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/bt_open_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开灯" />

        <Button
            android:id="@+id/bt_close_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关灯" />

        <Button
            android:id="@+id/bt_once_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点动" />
    </LinearLayout>

    <ListView
        android:id="@+id/lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </ListView>

</LinearLayout>